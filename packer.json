{
  "variables": {
    "aws_access_key_id": "{{env `aws_access_key_id`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}",
    "app_name": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key_id`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-zesty-17.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `app_name` | clean_ami_name}}-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo apt-get install software-properties-common -y",
      "sudo apt-add-repository ppa:ansible/ansible",
      "sudo apt-get update",
      "sudo apt-get install ansible -y"
    ]
  }, {
    "type": "file",
    "source": "{{template_dir}}/settings.json",
    "destination": "/tmp/settings.json"
  }, {
    "type": "ansible-local",
    "playbook_dir": "{{template_dir}}/ansible/config",
    "playbook_file": "{{template_dir}}/ansible/playbook.yml",
    "galaxy_file": "{{template_dir}}/ansible/requirements.yml",
    "inventory_file": "{{template_dir}}/ansible/inventory.yml",
    "extra_arguments": ["--extra-vars @/tmp/settings.json"]
  }]
}
